PLATFORM = Linux
CROSS	=
CC	= @echo " GCC	$@"; $(CROSS)gcc
CPP	= @echo " G++	$@"; $(CROSS)g++
LD	= @echo " LD	$@"; $(CROSS)ld
AR	= @echo " AR	$@"; $(CROSS)ar
RM	= @echo " RM	$@"; rm -f
STRIP = @echo " STRIP $@"; $(CROSS)strip

LDFLAGS += -LLib/$(PLATFORM) -lpthread
LIBDIR = Lib/$(PLATFORM)/
BINDIR = Bin/$(PLATFORM)/
