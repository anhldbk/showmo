<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/config_err_title"
        layout="@layout/titlebar_common" />

    <TextView
        android:id="@+id/config_failured"
        style="@style/style_add_device_tip_text"
        android:layout_marginTop="20dp"
        android:text="@string/add_device_config_failured" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/add_device_config_failured" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/add_device_config_err_wifi_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_selector"
            android:text="@string/add_device_config_err_connect_err"
            android:textColor="#FFFFFF"
            style="@style/style_showmo_text_medium" />

        <Button
            android:id="@+id/add_device_config_err_connect_suc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_selector"
            android:text="@string/add_device_config_err_connect_suc"
            android:textColor="#FFFFFF"
            style="@style/style_showmo_text_medium" />
    </LinearLayout>

</LinearLayout>