<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <include layout="@layout/titlebar_common" />

    <RelativeLayout
        android:id="@+id/safe_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="6dip"
        android:layout_marginTop="6dip" >

        <TextView
            android:id="@+id/safe_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="安全级别"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/color_pref_item_title" />

        <TextView
            android:id="@+id/safe_level_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/safe_level_title"
            android:layout_below="@id/safe_level_title"
            android:maxLines="4"
            android:text="当前级别：高"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/color_pref_item_summary" />

        <ImageView
            android:id="@+id/safe_level_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <FrameLayout style="@style/more_seperator_line" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/display_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="6dip"
        android:layout_marginTop="6dip" >

        <TextView
            android:id="@+id/display_safe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="自定义级别"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/color_pref_item_title" />

        <TextView
            android:id="@+id/display_safe_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/display_safe_title"
            android:layout_below="@id/display_safe_title"
            android:maxLines="4"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/color_pref_item_summary" />

        <ImageView
            android:id="@+id/display_safe_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <FrameLayout style="@style/more_seperator_line" >
    </FrameLayout>

</LinearLayout>