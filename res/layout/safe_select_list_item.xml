<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/safe_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="6dip"
        android:layout_marginTop="6dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/safe_level_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="级别：高"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/color_pref_item_title" />

            <TextView
                android:id="@+id/safe_level_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/safe_level_title"
                android:layout_below="@id/safe_level_title"
                android:maxLines="4"
                android:text="预设级别"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/color_pref_item_summary" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/select_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" />
    </LinearLayout>

    <FrameLayout style="@style/more_seperator_line" >
    </FrameLayout>

</LinearLayout>